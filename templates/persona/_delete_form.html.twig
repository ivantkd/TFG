<form method="post" action="{{ path('persona_delete', {'Numero_Empleado': persona.Numero_Empleado}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ persona.Numero_Empleado) }}">
    <button class="btn">Eliminar</button>
</form>
