{% extends 'nav.html.twig' %}

{% block title %}Ticket Show{% endblock %}

{% block content %}
<body>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <h1>Tickets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Mail</th>
                <td>{{ ticket.usermail }}</td>
            </tr>
            <tr>
                <th>Departamento</th>
                <td>{{ ticket.Departamento }}</td>
            </tr>
            <tr>
                <th>TipoIncidente</th>
                <td>{{ ticket.TipoIncidente }}</td>
            </tr>
            <tr>
                <th>Dispositivo</th>
                <td>{{ ticket.Dispositivo }}</td>
            </tr>
            <tr>
                <th>Explicacion</th>
                <td>{{ ticket.Explicacion }}</td>
            </tr>
        </tbody>
    </table>
    
    <br>

    <button class="btn"><a href="{{ path('tickets_index') }}">Volver a la lista de tickets</a></button>

    {#<a href="{{ path('tickets_edit', {'id': ticket.id}) }}">edit</a>#}

    <br>
    <br>

    {{ include('tickets/_delete_form.html.twig') }}
