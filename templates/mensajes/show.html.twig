{% extends 'nav.html.twig' %}
{% block title %}Mensajes{% endblock %}

{% block content %}

<body>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">

    <h1>Informaci√≥n del mensaje</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mensaje.id }}</td>
            </tr>
            <tr>
                <th>Cuerpo</th>
                <td>{{ mensaje.cuerpo }}</td>
            </tr>
            <tr>
                <th>Asunto</th>
                <td>{{ mensaje.asunto }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
