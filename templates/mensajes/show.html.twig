            </tr>
        </tbody>
    </table>

    <a href="{{ path('mensajes_index') }}">Volver a la feed de mensajes</a>

    {% if is_granted('ROLE_ADMIN') %}

    <br>

    {{ include('mensajes/_delete_form.html.twig') }}

    {% endif %}

